
@{
    ViewBag.Title = "ResetPassword";
    Layout = null;
}
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title></title>
    <link href="https://fonts.googleapis.com/css?family=Arial&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Jockey+One&display=swap" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>


<body>
    <style>
        .background {
            width: 50%;
            height: 100vh;
            background: linear-gradient(rgba(156, 209, 159, 1), rgba(15, 183, 159, 1));
        }

        .ResetPasswordClass {
            position: absolute;
            width: 80%;
            height: 80%;
            background: #FFFFFF;
            box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
            border-radius: 10px;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            margin: auto;
        }

        .RPInputs {
            position: relative;
            width: 50%;
            height: 100%;
            background: linear-gradient(rgba(156, 209, 159, 1), rgba(15, 183, 159, 1));
            float: left;
            margin: auto;
        }

        .RPTextOne {
            position: relative;
            color: black;
            top: 15%;
            margin-left: auto;
            margin-right: auto;
            display: block;
            font-family: 'Jockey One';
            font-style: normal;
            font-weight: 400;
            font-size: 34px;
            line-height: 48px;
            text-align: center;
        }

        .RPInputsCard {
            position: relative;
            width: 70%;
            height: auto;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            margin: auto;
        }

        .PasswordValidation {
            position: relative;
            width: 50%;
            height: 100%;
            margin: auto;
            float: right;
            top: 25%;
        }

        .ValiTextOne {
            position: relative;
            font-family: 'Jockey One';
            font-style: normal;
            font-weight: 400;
            font-size: 24px;
            color: #616A6B;
            float: right;
            text-align: center;
        }

        .ValiTextTwo {
            position: relative;
            font-family: 'Jockey One';
            font-style: normal;
            font-weight: 400;
            font-size: 22px;
            color: #616A6B;
        }

        .ValiTextThree {
            position: relative;
            font-family: 'Jockey One';
            font-style: normal;
            font-weight: 400;
            font-size: 22px;
            color: #616A6B;
        }

        .ValiTextFour {
            position: relative;
            font-family: 'Jockey One';
            font-style: normal;
            font-weight: 400;
            font-size: 22px;
            color: #616A6B;
        }

        .ValiTextFive {
            position: relative;
            font-family: 'Jockey One';
            font-style: normal;
            font-weight: 400;
            font-size: 22px;
            color: #616A6B;
        }

        .PasswordValidationCard {
            width: 70%;
            height: auto;
            margin: auto;
        }
    </style>
    <div class="background">
        <div class="ResetPasswordClass">
            <div class="RPInputs">
                <div class="row mt-5">
                    <span class="RPTextOne">Şifrenizi Değiştirin</span>
                </div>
                <div class="RPInputsCard row mt-5">
                    <div class="row">
                        <input class="input-group-text col-md-12 p-1" name="Password" type="password"
                               placeholder="Yeni Şifre:"
                               style="text-align: left; background-color: white; color: black;" />
                    </div>
                    <div class="row mt-2">
                        <input class="input-group-text col-md-12 p-1" name="Password" type="password"
                               placeholder="Yeni Şifre Tekrar:"
                               style="text-align: left; background-color: white; color: black;" />
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="btn-group">
                        <a class="btn btn-primary col-2 w-10" type="button" href="~/Auth/Login"
                           style="background-color: #E74C3C; border-radius:15px; border:none; color:white; font-size:16px; font-weight:500;">
                            Geri
                            Dön
                        </a>
                        <input class="btn btn-primary col-2 w-10" type="button" value="Kayıt Ol"
                               style="background-color: #0FB79F; border-radius:15px; border:none; color:white; font-size:16px; font-weight:500; text-align: center;" />
                    </div>
                </div>
            </div>
            <div class="PasswordValidation">
                <div class="PasswordValidationCard">
                    <div class="row">
                        <span class="ValiTextOne">Şifre bu alanları içermelidir:</span>
                    </div>
                    <div class="row">
                        <span class="ValiTextTwo">Şifre en az 8 karakterden oluşmalıdır.</span>
                    </div>
                    <div>
                        <span class="ValiTextThree">Şifre de ne az 1 büyük karakter olmalıdır.</span>
                    </div>
                    <div class="row">
                        <span class="ValiTextFour">Şifre de en az 1 küçük karakter olmalıdır.</span>
                    </div>
                    <div class="row">
                        <span class="ValiTextFive">Şifre de en az 1 rakam olmalıdır(0,9).</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

</html>




