@model Entity.DTO.RabbitMQLoginDTO
@{
    Layout = null;
}
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title></title>
    <link href="https://fonts.googleapis.com/css?family=Arial&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Jockey+One&display=swap" rel="stylesheet" />
    <link href="~/Content/MyCss/SignUp/CustomerSignUp/CustomerSignUp.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>

<body>
    <form asp-controller="Auth" asp-action="CustomerSignUp" method="post">
        <div class="SignUp">
            <div class="SignUpInputs">
                <div class="Inputs">
                    <span class="SignUpTextOne">Bireysel Kullanıcı Oluştur</span>
                    <span class="SignUpTextTwo">Ikinci El Araç Ihale Sistemi Kayıt Olun.</span>
                    <input class="SignUpUsername" name="Username" value="Mert" type="text" placeholder="Kullanıcı Adı:" />
                    <input class="SignUpName" name="Customername" value="Mert Kaya Dalkıran" type="text" placeholder="Ad Soyad:" />
                    <input class="SignUpPhone" name="Phone" value="05071042105" type="text" placeholder="Telefon:" />
                    <input class="SignUpEmail" name="Email" value="martkayadalkiran@hotmail.com" type="email" placeholder="Email:" />
                    <input class="SignUpPassword" name="Password" value="123456" type="password" placeholder="Şifre" />
                    <input class="SignUpCheckPassword" name="RePassword" value="123456" type="password" placeholder="Şifre Tekrarı" />
                    <div class="Grp">
                        <a href="~/Auth/Login" class="SignUpJoinUsTwo">Geri Dön</a>
                        <input class="SignUpJoinUsOne" type="submit" value="Kayıt Ol" />
                    </div>
                </div>
            </div>
            <div class="ImageLayer">
                <img src="~/Content/Images/NewCustomer.png" class="CarImage" />
            </div>
        </div>
    </form>
</body>
</html>