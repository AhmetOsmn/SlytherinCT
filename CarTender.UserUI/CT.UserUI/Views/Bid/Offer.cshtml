</div>
<div class="container-fluid mb-3">
    <div class="card shadow mb-4">
        <h2 class="card-header py-3 text-center mt-1">@ViewBag.Title</h2>
        <div class="card-body">
            <label class="mt-3 text-center"><b>İhale Genel Bilgiler</b></label>
            <div class="card-body mt-1 p-4" style="border:2px solid gray;">
                <div class="row ">
                    <div class="col-md-4">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="">İhale Adı:</span>
                            </div>
                            <input disabled type="text" class="form-control col-md-8" value="Örnek Araç İhale">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="inputGroupSelect01">Bireysel/Kurumsal:</label>
                            </div>
                            <select disabled class="custom-select" id="inputGroupSelect01">
                                <option disabled>Müşteri Tipi Seçiniz...</option>
                                <option selected value="1">Bireysel Müşteri</option>
                                <option value="2">Kurumsal Müşteri</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="inputGroupSelect01">Şirket Adı:</label>
                            </div>
                            <select disabled class="custom-select" id="inputGroupSelect01">
                                <option disabled>Şirket Adı Seçiniz...</option>
                                <option selected value="1">XXX</option>
                                <option value="2">YYY</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-md-4">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label class="input-group-text form-control col-md-12" for="inputGroupSelect01">Statü:</label>
                            </div>
                            <select disabled class="custom-select form-control col-md-9" id="inputGroupSelect01">
                                <option disabled>Statü Seçiniz...</option>
                                <option selected value="1">Başlamadı</option>
                                <option value="2">Başladı</option>
                                <option value="3">Bitti</option>
                                <option value="4">İptal</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="">İhale Başlangıç Tarih:</span>
                            </div>
                            <input disabled type="date" value="" class="form-control col-md-8" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="">İhale Başlangıç Saat:</span>
                            </div>
                            <input disabled type="text" class="form-control col-md-8">
                        </div>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-md-4">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="">İhale Bitiş Tarih:</span>
                            </div>
                            <input disabled type="date" value="" class="form-control col-md-7" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="">İhale Bitiş Saat:</span>
                            </div>
                            <input disabled type="text" class="form-control col-md-9">
                        </div>
                    </div>
                </div>
            </div>
            <label class="mt-3 text-center"><b>Araç İhale Listesi</b></label>
            <div class="mt-1 p-1" style="border:2px solid gray;">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">Araç Plaka</th>
                            <th scope="col">Araç Marka</th>
                            <th scope="col">Araç Model</th>
                            <th scope="col">Bireysel / Kurumsal</th>
                            <th scope="col">Statü</th>
                            <th scope="col">Kaydetme Zamanı</th>
                            <th scope="col">Belirlenen Fiyat</th>
                            <th scope="col">Teklif</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td scope="row">16 E 987</td>
