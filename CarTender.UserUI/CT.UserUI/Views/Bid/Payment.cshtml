
@{
    ViewBag.Title = "İhale Ödeme Sayfası";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/bundles/modernizr")
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="~/Scripts/main.js"></script>
</head>
</div>
<div class="container-fluid">
    <h2 class="text-center">@ViewBag.Title</h2>
    <div class="card-header bg-light p-30 ">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">İhale Adı</th>
                    <th scope="col">İhale Başlangıç</th>
                    <th scope="col">İhale Bitiş</th>
                    <th scope="col">Statü</th>
                    <th scope="col">Noter Ücreti</th>
                    <th scope="col">Komisyon Ücreti</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>23/10/2020 Toyota İhalesi</td>
                    <td>26/09/2020</td>
                    <td>27/09/2020</td>
                    <td>Sonlandı</td>
                    <td>1500₺</td>
                    <td>5000₺</td>
                    <td>
                        <button type="button" class="btn btn-warning col-md-12" id="myInput" data-toggle="modal" data-target="#paymentPage">
                            Ödeme Bilgileri
                        </button>
                    </td>
                </tr>
                <tr>
                    <td>23/10/2020 Toyota İhalesi</td>
                    <td>26/09/2020</td>
                    <td>27/09/2020</td>
                    <td>Sonlandı</td>
                    <td>1500₺</td>
                    <td>5000₺</td>
                    <td>
                        <button type="button" class="btn btn-warning col-md-12" id="myInput" data-toggle="modal" data-target="#paymentPage">
                            Ödeme Bilgileri
                        </button>
                    </td>
                </tr>
                <tr>
                    <td>23/10/2020 Toyota İhalesi</td>
                    <td>26/09/2020</td>
                    <td>27/09/2020</td>
                    <td>Sonlandı</td>
                    <td>1500₺</td>
                    <td>5000₺</td>
                    <td>
                        <button type="button" class="btn btn-warning col-md-12" id="myInput" data-toggle="modal" data-target="#paymentPage">
                            Ödeme Bilgileri
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>




<div class="modal" id="paymentPage" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="exampleModalLabel3" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel3">Ödeme Bilgileri</h5>
                <button type="button" class="btn-close btn-circle btn-sm btn-dark" onclick="$('#paymentPage').modal('hide');" aria-label="Close"><i class="fa-solid fa-x"></i></button>
            </div>
            <div class="modal-body col-md-12">
                <div class="input-group mb-3 col-md-12">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="inputGroupSelect01">Toplam Noter Ücreti:</label>
                        </div>
                        <input disabled type="text" value="1500" class="form-control col-md-12" />
                    </div>
                </div>
                <div class="input-group mb-3 col-md-12">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="inputGroupSelect01">Ödenen Noter Ücreti:</label>
                        </div>
                        <input disabled type="text" value="500" class="form-control col-md-12" />
                    </div>
                </div>
                <div class="input-group mb-3 col-md-12">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="inputGroupSelect01">Ödenecek Noter Ücreti:</label>
                        </div>
                        <input disabled type="text" value="1000" class="form-control col-md-12" />
                    </div>
                </div>
            </div>
            <div class=" col-md-12">
                <div class="input-group mb-3 col-md-12">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="inputGroupSelect01">Toplam Komisyon Tutarı:</label>
                        </div>
                        <input disabled type="text" value="5000" class="form-control col-md-12" />
                    </div>
                </div>
                <div class="input-group mb-3 col-md-12">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="inputGroupSelect01">Ödenen Komisyon Tutarı:</label>
                        </div>
                        <input disabled type="text" value="0" class="form-control col-md-12" />
                    </div>
                </div>
                <div class="input-group mb-3 col-md-12">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="inputGroupSelect01">Ödenecek Komisyon Tutarı:</label>
                        </div>
                        <input disabled type="text" value="5000" class="form-control col-md-12" />
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <div class="input-group mb-3 col-md-12">

                    <div class="input-group">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="inputGroupSelect01">Toplam Ödenecek Tutar:</label>
                        </div>
                        <input disabled type="text" value="6000" class="form-control col-md-12" />
                    </div>
                </div>



                <div class="row">
                    <div class="">
                        <div class="card">
                            <div class="card-header">
                                <strong>Kredi Kartı Bilgileri</strong>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label for="name">Kart Sahibi Adı Soyadı</label>
                                            <input class="form-control" id="name" type="text" placeholder="Kart Sahibi Adı Soyadı Bilgilerini Giriniz">
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label for="ccnumber">Kredi Kartı Numarası</label>
                                            <div class="input-group">
                                                <input class="form-control" type="car" placeholder="0000 0000 0000 0000" autocomplete="email">
                                                <div class="input-group-append">
                                                    <span class="input-group-text">
                                                        <i class="mdi mdi-credit-card"></i>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="form-group col-sm-4">
                                        <label for="ccmonth">Ay</label>
                                        <select class="form-control" id="ccmonth">
                                            <option>1</option>
                                            <option>2</option>
                                            <option>3</option>
                                            <option>4</option>
                                            <option>5</option>
                                            <option>6</option>
                                            <option>7</option>
                                            <option>8</option>
                                            <option>9</option>
                                            <option>10</option>
                                            <option>11</option>
                                            <option>12</option>
                                        </select>
                                    </div>
                                    <div class="form-group col-sm-4">
                                        <label for="ccyear">Yıl</label>
                                        <select class="form-control" id="ccyear">
                                            <option>2022</option>
                                            <option>2023</option>
                                            <option>2024</option>
                                            <option>2025</option>
                                            <option>2026</option>
                                            <option>2027</option>
                                            <option>2028</option>
                                            <option>2029</option>
                                            <option>2030</option>
                                            <option>2031</option>
                                            <option>2032</option>
                                        </select>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <label for="cvv">CVV/CVC</label>
                                            <input class="form-control" id="cvv" type="text" placeholder="123">
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="card-footer">
                                <button class="btn btn-sm btn-success float-right" type="submit">
                                    <i class="mdi mdi-gamepad-circle"></i> Ödeme Yap
                                </button>
                                <button class="btn btn-sm btn-danger" type="reset">
                                    <i class="mdi mdi-lock-reset"></i> Sıfırla
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>