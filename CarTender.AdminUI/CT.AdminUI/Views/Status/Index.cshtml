@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div id="accordion">
        <div class="card">
            <div id="collapseTwo" class="collapse show p-3" aria-labelledby="headingTwo" data-parent="#accordion">
                <div class="row mt-3">
                    <div class="col-md-4">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="inputGroupSelect01">Statü Tipi:</label>
                            </div>
                            <select class="custom-select" id="inputGroupSelect01">
                                <option value="1" selected>Araç</option>
                                <option value="2">İlan</option>
                                <option value="3">İhale</option>
                                <option value="4">Şirket</option>
                                <option value="3">Tramer</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="p-3" style="border:2px solid gray; border-radius: .35rem;">

                    <div class="mb-3">
                        <a class="btn btn-success" data-toggle="modal" data-target="#exampleModalAdd" href="#">Yeni Statü Ekle</a>
                    </div>

                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">Statü</th>
