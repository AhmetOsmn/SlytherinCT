@using Entity.DTO
@using Entity.DTO.Pagination
@model PaginatedList<CarListDTO>

@{
    ViewData["Title"] = "Araç Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid p-5">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Araç Tanımlama / Listeleme</h1>
    <p class="mb-4">
        Kullanıcıların eklemiş olduğu araçları buradan inceleyip ve düzenleyebilirsiniz.
    </p>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Arama Kriterleri</h6>
        </div>
        <div class="card-body">
            <form class="row">
                <div class="col-md-3">
                    <div class="mb-3">
                        <label for="exampleFormControlSelect1">Marka</label><select class="form-control" id="exampleFormControlSelect1">
                            <option>Audi</option>
                            <option>BMW</option>
                            <option>Volkswagen</option>
                            <option>Chevrolet</option>
                            <option>Opel</option>
                            <option>Peguot</option>
                            <option>Renault</option>
                            <option>Toyota</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="mb-3">
                        <label for="exampleFormControlSelect1">Model</label><select class="form-control" id="exampleFormControlSelect1">
                            <option>A7</option>
                            <option>I5</option>
                            <option>Clio</option>
                            <option>Megane</option>
                            <option>1 Serisi</option>
                            <option>5 Serisi</option>
                            <option>Golf</option>
                            <option>Polo</option>
                            <option>208</option>
                            <option>Auris</option>
                            <option>Corolla</option>
                            <option>Astra</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="mb-3">
                        <label for="exampleFormControlSelect1">Bireysel / Kurumsal</label><select class="form-control" id="exampleFormControlSelect1">
                            <option>Bireysel</option>
                            <option>Kurumsal</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="mb-3">
                        <label for="exampleFormControlSelect1">Statü</label><select class="form-control" id="exampleFormControlSelect1">
                            <option>Giriş</option>
                            <option>Hemen Al Satışta</option>
                            <option>İhalede</option>
                            <option>Ekspertiz sonucu bekleniyor</option>
                            <option>Satıldı</option>
                            <option>Satış İptal</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-9 col-sm-0"></div>
                <div class="col-md-3 col-sm-12">
                    <button class="btn btn-info btn-block" style="background-color: #2E86C1 ;" type="button"><i class="fa-solid fa-list" style="color:white;"></i>  Listele</button>
                </div>
            </form>
        </div>
    </div>

    <div class="row mb-4 clearfix">
        <div class="col-md-3 float-right">
            <a class="btn btn-success btn-block " asp-controller="Car" asp-action="Edit"><i class="fa-solid fa-plus"></i> Araç Oluştur</a>
        </div>

    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Araç Listesi</h6>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get">
                <div class="form-actions">
                    <div class="row mt-3 mb-3">
                        <div class="col-md-4">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <label class="input-group-text" for="inputGroupSelect01">Plaka:</label>
                                </div>
                                <input type="text" class="form-control" name="SearchString" value="@ViewData["CurrentFilter"]" />
                            </div>
                        </div>
                        <div class="col-md-1">
                            <button class="btn btn-warning" type="submit"><i class="fa fa-search"></i></button>
                        </div>
                        <div class="col-md-2">
                            <a asp-action="Index" class="btn btn-info">Hepsini Göster</a>
                        </div>
                    </div>
                </div>
            </form>
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Plaka</a></th>
                            <th>Marka</th>
                            <th>Model</th>
                            <th>Bireysel/Kurumsal</th>
                            <th>Statü</th>
                            <th>Kaydeden Kullanıcı</th>
                            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Kayıt Tarihi</a></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Plate</td>
                                <td>@item.CarBrand</td>
                                <td>@item.CarModel</td>
                                <td>@item.IsCorporate</td>
                                <td>@item.Status</td>
                                <td>@item.CreatedBy</td>
                                <td>@item.CreatedDate</td>
                                <td>
                                    <a class="btn btn-warning" asp-controller="Car" asp-action="Edit"><i class="fa-solid fa-pen-to-square" style="color:black;"></i> Güncelle</a>
                                </td>
                                <td>
                                    <button type="button" class="btn btn-danger" id="myInput" data-bs-toggle="modal" data-bs-target="#deleteCar">
                                        <i class="far fa-trash-alt"></i>
                                        Sil
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                @{
                    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
                }

                <a asp-action="Index"
                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                   asp-route-pageNumber="@(Model.PageIndex - 1)"
                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   class="btn btn-default @prevDisabled">
                    Önceki
                </a>
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                   asp-route-pageNumber="@(Model.PageIndex + 1)"
                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   class="btn btn-default @nextDisabled">
                    Sonraki
                </a>
            </div>
        </div>
    </div>

    <div id="accordion" class="mb-5">
        <div class="card">
            <div class="card-header" id="headingThree">
                <h5 class="mb-0">
                    <a class="btn btn-light" data-toggle="collapse" data-target="#ccarindex1" aria-expanded="true" aria-controls="ccarindex1" role="button">Pasif Durumdaki Araçlar</a>
                </h5>
            </div>
            <div id="ccarindex1" class="collapse show p-3" aria-labelledby="headingThree" data-parent="#accordion">
                <div class="p-3" style="border:2px solid gray; border-radius: .35rem;">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Plaka</th>
                                <th>Marka</th>
                                <th>Model</th>
                                <th>Bireysel/Kurumsal</th>
                                <th>Statü</th>
                                <th>Kaydeden Kullanıcı</th>
                                <th>Kayıt Tarihi</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>hede</td>
                                <td>hede</td>
                                <td>hede</td>
                                <td>hede</td>
                                <td>hede</td>
                                <td>hede</td>
                                <td>hede</td>
                                <td>
                                    <button type="button" class="btn btn-success" id="myInput" data-bs-toggle="modal" data-bs-target="#activation"><i class="far fa-plus"></i> Aktif Et</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@await Component.InvokeAsync("DeleteModal", new{title = "Aracı Sil", body="Aracı silmek istediğinize emin misiniz?", id="deleteCar"})

@await Component.InvokeAsync("ActivationModal", new{title = "Aracı Aktif Et", body="Aracı aktif hale getirmek istediğinize emin misiniz?", id="activation"})