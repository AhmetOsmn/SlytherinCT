<body>
    <div class="container">
        <div id="accordion">
            <div class="card">
                <div class="card-header" id="headingTwo">
                    <h5 class="mb-0">
                        <a class="btn btn-light" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo" role="button">Araç Komisyon Listesi</a>
                    </h5>
                </div>
                <div style="margin-left:5%;margin-right:5%" id="collapseTwo" class="collapse show" aria-labelledby="headingTwo" data-parent="#accordion">
                    <br />
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">Komisyon Tutarı</th>
                                <th scope="col">Açıklama</th>
                                <th scope="col">Minimum Araç Tutarı</th>
                                <th scope="col">Maksimum Araç Tutarı</th>
                                <th scope="col">Başlangıç Tarihi</th>
                                <th scope="col">Bitiş Tarihi</th>
                                <th scope="col">Güncelle</th>
                                <th scope="col">Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>5000</td>
                                <td>Nakit ödenmiştir</td>
                                <td>150.000</td>
                                <td>350.000</td>
                                <td>01.10.2022</td>
                                <td>01.11.2022</td>
                                <td>
                                    <a class="btn btn-warning" data-toggle="modal" data-target="#editCarCommission" href="#"><i class="fa-solid fa-pen-to-square" style="color:black;"></i> Güncelle</a>
                                </td>
                                <td>
                                    <a class="btn btn-danger" data-toggle="modal" data-target="#deleteCarCommission" href="#"><i class="far fa-trash-alt"></i> Sil</a>
                                </td>
                            </tr>
                            <tr>
                                <td>4500</td>
                                <td>Nakit ödenmiştir</td>
                                <td>150.000</td>
                                <td>350.000</td>
                                <td>01.9.2022</td>
                                <td>01.10.2022</td>
                                <td>
                                    <a class="btn btn-warning" data-toggle="modal" data-target="#editCarCommission" href="#"><i class="fa-solid fa-pen-to-square" style="color:black;"></i> Güncelle</a>
                                </td>
                                <td>
                                    <a class="btn btn-danger" data-toggle="modal" data-target="#deleteCarCommission" href="#"><i class="far fa-trash-alt"></i> Sil</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="modal" id="deleteCarCommission" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel1" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Araç Komisyonu'nu Sil</h5>
                    <button class="btn btn-dark btn-circle btn-sm" type="button" data-bs-dismiss="modal" aria-label="Close">
                        <i class="fa-solid fa-x"></i>
                    </button>
                </div>
                <div class="modal-body">Silmek istediğinize emin misiniz?</div>
                <div class="modal-footer"><button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Kapat</button><button class="btn btn-danger" type="button">Sil</button></div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="editCarCommission" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Araç Komisyonu'nu Güncelle</h5>
                    <button class="btn btn-dark btn-circle btn-sm" type="button" data-bs-dismiss="modal" aria-label="Close">
                        <i class="fa-solid fa-x"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="inputGroupSelect01">Aktif/Pasif:</label>
                        </div>
                        <input type="text" value="" class="form-control col-md-8" />
                    </div>
                </div>
                <div class="modal-footer"><button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Kapat</button><button class="btn btn-danger" type="button">Kaydet</button></div>
            </div>
        </div>
    </div>
</body>
</html>
